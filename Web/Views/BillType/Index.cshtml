@model IEnumerable<Web.Models.BillTypeViewModel>

@{
    ViewBag.Title = "Типы квитанций";
}
<div class="container">
        <div class="page-header">
            <h2>Типы квитанций</h2>
        </div>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Квитанции", "Index", "Home")</li>
            <li class="active">Типы квитанций</li>
        </ol>
    <div class="row">
        <p>
            <a href="@Url.Action("Create")" class="btn btn-success">Cоздать</a>
        </p>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillCount)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", new { id=item.Id })">@Html.DisplayFor(modelItem => item.TypeName)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillCount)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>